      <% @articles.each do |article| %>
      <div class="row">
        <div class="col s6 offset-s3">
          <div class="card">
            <div class="card-image">
              <%= image_tag article.image %>
              <span class="card-title"><%= article.title %></span>
            </div>
            <div class="card-content">
              <p><%= article.detail %></p>
            </div>
            <div class="card-action">
              <a href="#">more</a>
            </div>
          </div>
        </div>      
      </div>
      <% end %>
      <%= paginate @articles %>